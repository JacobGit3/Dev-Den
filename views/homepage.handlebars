
{{#if loggedIn}}
<form class="post-form">
  <div>
    <textarea name="title"></textarea>
    <textarea name="post-body"></textarea>
  </div>

  <div>
    <button type="submit">Post</button>
  </div>
</form>
{{/if}}

<div id="posts-section">
  {{#each posts as |post|}}
    <article class="post">
      <div class="title">
        <a href="/post/{{post.id}}">
        <h2>{{post.title}}</h2>
        <p>{{post.post_text}}</p>
        <p>{{user.username}}</p>
        </a>
      </div>
    </article>

  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/post.js"></script>
{{/if}}